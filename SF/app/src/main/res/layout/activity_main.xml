<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E8EAF6">

    <!-- Thông tin nhiệt độ và độ ẩm trong một ô vuông -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/temperature_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature: 25°C"
                android:textSize="24sp"
                android:textColor="#FF5722"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/humidity_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity: 60%"
                android:textSize="24sp"
                android:textColor="#2196F3"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Hiển thị trạng thái của thiết bị -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/wifi_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WiFi Status: Connected"
                android:textSize="18sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/device_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Status: All systems operational"
                android:textSize="18sp"
                android:textColor="#757575"
                android:textStyle="italic" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Các nút điều khiển thiết bị -->
    <Button
        android:id="@+id/light_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bật Đèn"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/fan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bật Quạt"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/door_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mở Cửa"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/feed_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cho Thức Ăn"
        android:backgroundTint="#F44336"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <!-- Ô vuông cập nhật trạng thái điều khiển -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/control_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng Thái: Chưa thực hiện"
                android:textSize="18sp"
                android:textColor="#757575"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
